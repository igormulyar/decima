<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="imuliar">
        <comment>Create Slot table</comment>
        <createTable tableName="SLOT">
            <column name="ID" type="java.sql.Types.NUMERIC(19,0)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SLOT_ID"/>
            </column>
            <column name="NUMBER" type="java.sql.Types.INTEGER(10)">
                <constraints nullable="false"/>
            </column>
            <column name="MAX_LOADING" type="java.sql.Types.INTEGER(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="imuliar">
        <comment>Create Parking_User table</comment>
        <createTable tableName="PARKING_USER">
            <column name="ID" type="java.sql.Types.NUMERIC(19,0)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PARKING_USER_ID"/>
            </column>
            <column name="FIRST_NAME" type="java.sql.Types.VARCHAR(255)"/>
            <column name="LAST_NAME" type="java.sql.Types.VARCHAR(255)"/>
            <column name="TELEGRAM_USER_ID" type="java.sql.Types.INTEGER(10)">
                <constraints nullable="false"/>
            </column>
            <column name="TELEGRAM_USERNAME" type="java.sql.Types.VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="imuliar">
        <comment>Create booking table</comment>
        <createTable tableName="BOOKING">
            <column name="ID" type="java.sql.Types.NUMERIC(19,0)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BOOKING_ID"/>
            </column>
            <column name="DATE" type="java.sql.Types.DATE">
                <constraints nullable="false"/>
            </column>
            <column name="SLOT_ID" type="java.sql.Types.NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="java.sql.Types.NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="BOOKING" baseColumnNames="SLOT_ID" constraintName="FK_BOOKING_SLOT"
                                 referencedTableName="SLOT"
                                 referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="BOOKING" baseColumnNames="USER_ID"
                                 constraintName="FK_BOOKING_PARKING_USER" referencedTableName="PARKING_USER"
                                 referencedColumnNames="ID"/>
    </changeSet>

    <changeSet id="4" author="imuliar">
        <comment>Create Reserve table</comment>
        <createTable tableName="RESERVE">
            <column name="ID" type="java.sql.Types.NUMERIC(19,0)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESERVE_ID"/>
            </column>
            <column name="SLOT_ID" type="java.sql.Types.NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="java.sql.Types.NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="RESERVE" baseColumnNames="SLOT_ID" constraintName="FK_RESERVE_SLOT"
                                 referencedTableName="SLOT"
                                 referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="RESERVE" baseColumnNames="USER_ID"
                                 constraintName="FK_RESERVE_PARKING_USER" referencedTableName="PARKING_USER"
                                 referencedColumnNames="ID"/>
    </changeSet>

    <changeSet id="5" author="imuliar">
        <comment>Create Vacant_period table</comment>
        <createTable tableName="VACANT_PERIOD">
            <column name="ID" type="java.sql.Types.NUMERIC(19,0)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_vacant_period_ID"/>
            </column>
            <column name="PERIOD_START" type="java.sql.Types.DATE">
                <constraints nullable="false"/>
            </column>
            <column name="PERIOD_END" type="java.sql.Types.DATE">
                <constraints nullable="false"/>
            </column>
            <column name="SLOT_ID" type="java.sql.Types.NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="VACANT_PERIOD" baseColumnNames="SLOT_ID"
                                 constraintName="FK_VACANT_PERIOD_SLOT" referencedTableName="SLOT"
                                 referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>